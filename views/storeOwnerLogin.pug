extends base

block content
    main.main
        .login__form
            img.login__form__header(src='imagens/Lalitaa/Lalitaa_logo_transparent.png' alt='')
            form.form.form--storeOwnerLogin
                    .form__group
                        input#storeOwnerData.form__input(type='text' name='' placeholder='Nome de usuario ou E-mail' required='')
                    .form__group.ma-bt-md
                        input#storeOwnerPassword.form__input(type='password' name='' placeholder='Palavra-passe' required='' minlength='8')
                    .form__group
                        button.btn.login__btn ENTRAR
            a.btn.signup__btn(href='/donoLojaCriarConta') Criar conta
