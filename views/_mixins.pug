mixin overviewBox(label, text, icon)
    .overview-box__detail
        svg.overview-box__icon
            use(xlink:href=`/imagens/dev/svgicons/icons.svg#icon-${icon}`)
        span.overview-box__label= label
        span.overview-box__text= text
mixin moderadoresBox(fotografia, role, nome)
    .overview-box__detail
        img.overview-box__img(src=`/imagens/usuarios/${fotografia}`, alt= `${nome}` )
        span.overview-box__label= role
        span.overview-box__text= nome
mixin imagensBox(imagem,i)
    .picture-box
        img.picture-box__img(src=`/imagens/servicos/${imagem}`, alt=`${servico.nome} image`, class=`picture-box__img--${i +1}`)
mixin reviewsBox(review)
    .reviews__card
        .reviews__avatar
            img.reviews__avatar-img(src=`/imagens/usuarios/${review.usuario.fotografia}`, alt=`${review.usuario.nome}`)
            h6.reviews__user= review.usuario.nome
        p.reviews__text= review.review
            .reviews__rating
                each star in [1,2,3,4,5]
                    svg.reviews__star(class=`reviews__star--${(review.rating/2) >= star ? 'active':'inactive'}`)
                        use(xlink:href='/img/icons.svg#icon-star')
mixin navItem(link,text,icon,active)
    li(class=`${active ? 'side-nav--active':''}`)
        a(href=`${link}`)
            svg
                use(xlink:href=`/imagens/dev/svgicons/icons.svg#icon-${icon}`)
            | #{text}
mixin listItem(url,icon,nome)
    li.side-nav__item.side-nav__item--active
        a.side-nav__link(href=`/${url}`)
            svg.side-nav__icon
                use(xlink:href=`/imagens/dev/sprite.svg#icon-${icon}`)
            span= nome