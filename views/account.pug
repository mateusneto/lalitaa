extends base
include _mixins

block content
    main.main
        .user-view
            nav.user-view__menu
                ul.side-nav
                    +navItem('#','Settings','settings',true)
                    +navItem('/meus-servicos','My bookings','briefcase')
                    +navItem('#','My reviews','star')
                    +navItem('#','Billing','credit-card')
                - if(usuario.role === 'administrador')
                    .admin-nav
                        h5.admin-nav__heading Admin
                        ul.side-nav
                            +navItem('#','Gerir serviços','map')
                            +navItem('#','Gerir usuarios','users')
                            +navItem('#','Gerir reviews','star')
                            +navItem('#','Gerir apontamentos','briefcase')

            .user-view__content
                .user-view__form-container
                    h2.heading-secondary.ma-bt-md Your account settings
                    //- Without API
                    //-form.form.form-user-data(action='/submit-user-data'  method='POST')
                    //- With API
                    form.form.form-user-data
                        .form__group
                            label.form__label(for='name') Nome
                            input#name.form__input(type='text', value= `${usuario.nome}`, required, name='nome')
                        .form__group.ma-bt-md
                            label.form__label(for='username') Username
                            input#username.form__input(type='text', value=`${usuario.nomeUsuario}`, required, name='nomeUsuario')
                        .form__group.ma-bt-md
                            label.form__label(for='email') Email address
                            input#email.form__input(type='email', value=`${usuario.email}`, required,name='email')
                        .form__group.form__photo-upload
                            img.form__user-photo(src=`imagens/usuarios/${usuario.fotografia}`, alt='User photo')
                            input.form__upload(type="file",accept='image/*',id='photo',name='fotografia')
                            label(for="photo") Escolher nova fotografia
                        .form__group.right
                            button.btn.btn--small.btn--green Save settings
                .line &nbsp;
                .user-view__form-container
                    h2.heading-secondary.ma-bt-md Password change
                    form.form.form-user-password
                        .form__group
                            label.form__label(for='password-current') Current password
                            input#password-current.form__input(type='password', placeholder='••••••••', required, minlength='8')
                        .form__group
                            label.form__label(for='password') New password
                            input#password.form__input(type='password', placeholder='••••••••', required, minlength='8')
                        .form__group.ma-bt-lg
                            label.form__label(for='password-confirmacao') Confirm password
                            input#password-confirmacao.form__input(type='password', placeholder='••••••••', required, minlength='8')
                        .form__group.right
                            button.btn.btn--small.btn--green.btn--save-password Save password
